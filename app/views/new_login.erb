<h1> Create a new login </h1>
<hr/>

<% if @user &&  @user.errors.any? %>
  <div>
     <strong>Some issues with your account registration - please fix them:</strong>
     <ul>
     <% @user.errors.full_messages.each do |user| %>
       <li><%= user %></li>
     <% end %>
     </ul>
  </div>
<% end %>

<form method="post" action="/new_login">
  <div>
    <label>Email:</label>
    <input type="text" name="email" value="<%= @user && @user.email %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="text" name="password_digest" value="<% @user && @user.password_digest %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
