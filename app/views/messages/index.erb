<h1> Song List </h1>

<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.title %></a> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <a href="<%= message.url %>"><%= message.url %></a>
    </p>
    <p>
      <small><i> Posted at: <%= message.created_at %> </i></small>
    </p>
    <br>
<% end %>

<a href="/messages/new">Post a song!</a>
