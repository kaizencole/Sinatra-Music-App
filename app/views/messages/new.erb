<h1> Post a Song </h1>
<hr/>

<% if @message &&  @message.errors.any? %>
  <div>
     <strong>Some issues with your song post, please fix them:</strong>
     <ul>
     <% @message.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
  </div>
<% end %>

<form method="post" action="/messages">
  <div>
    <label>Song Title:</label>
    <input type="text" name="title" value="<%= @message && @message.title %>">
  </div>
  <div>
    <label>Artist:</label>
    <input type="text" name="author" value="<% @message && @message.author %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<% @message && @message.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
